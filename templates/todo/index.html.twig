{% extends 'templates.html.twig' %}

{% block title %}Todo{% endblock %}

{% block form_crud %}
<section class="welcome2 p-b-15">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-light">
    <div class="row">
        <div class="col">
            <div class="p-3 highlight">
                <h1 class="text-light">New Todo</h1>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.name) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="details" class="col-sm-2 col-form-label">Details</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.details) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="label" class="col-sm-2 col-form-label">Label</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.label) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="date" class="col-sm-2 col-form-label">Date</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.date) }}
                    </div>
                </div>

                {{ form_widget(form.save) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}




    <div class="row">
        <div class="col">

            {% if page is defined %}
                <h1>Hello {{ page }}! âœ…</h1>
            {% endif %}

            {% for flashMessage in app.session.flashbag.get('notice') %}

                <section class="alert-wrap p-b-50">
                    <div class="container">
                        <!-- ALERT-->
                        <div class="alert au-alert-success alert-dismissible fade show au-alert au-alert--70per" role="alert">
                            <i class="zmdi zmdi-check-circle"></i>
                            <span class="content">{{ flashMessage }}</span>
                            <button class="close" type="button" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">
                                <i class="zmdi zmdi-close-circle"></i>
                            </span>
                            </button>
                        </div>
                        <!-- END ALERT-->
                    </div>
                </section>

            {% endfor %}



            {% if todos is defined %}
                <table class="table table-borderless table-data3">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Details</th>
                        <th scope="col">Labels</th>
                        <th scope="col">Date</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for todo in todos %}
                        <tr>
                            <td>{{ todo.id }}</td>
                            <td>{{ todo.name }}</td>
                            <td>{{ todo.details }}</td>
                            <td>
                                {% if todo.label == 0 %}
                                    <span class="badge badge-primary text-uppercase">TODO</span>
                                {% elseif todo.label == 1 %}
                                    <span class="badge badge-warning text-uppercase">In Progress</span>
                                {% elseif todo.label == 2 %}
                                    <span class="badge badge-success text-uppercase">DONE</span>
                                {% endif %}
                            </td>
                            <td>{{ todo.date }}</td>
                            <td>
                                <a href="{{ path('todo_edit',{'page' : todo.id}) }}"><button type="button" class="btn btn-success">Edit <i class="fas fa-edit"></i></button></a>
                                <a href="{{ path('todo_delete',{'id' : todo.id}) }}"><button type="button" class="btn btn-danger">Delete <i class="fas fa-trash-alt"></i></button></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function () {
        $('#form_date').datepicker({
            format: 'yyyy-m-d',
            todayHighlight : true,
            todayBtn: "linked",
        });


    });

</script>
{% endblock %}
